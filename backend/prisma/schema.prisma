generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}


enum Role {
  OWNER
  EDITOR
  VIEWER
}

enum ElementType {
  RECTANGLE
  CIRCLE
  PENCIL
  LINE
  TEXT
  IMAGE
}

model User {
  id         String @id @default(uuid())
  name       String 
  email      String  @unique
  password   String
  boards     Board[]   @relation("OwnedBoards")
  sessions   Session[]
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  operations Operation[]
  permissions Permission[]
}

model Board {
  id           String @id @default(uuid())
  title        String
  owner        User   @relation("OwnedBoards", fields: [ownerId], references: [id])
  ownerId      String
  elements     Element[]
  sessions     Session[]
  permissions  Permission[]
  operations   Operation[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Session {
  id            String   @id @default(uuid())
  board         Board    @relation(fields: [boardId], references: [id])
  boardId       String
  user          User?    @relation(fields: [userId],  references: [id])
  userId        String?  
  startedAt     DateTime @default(now())
  endedAt       DateTime?
}

model Element {
  id          String       @id @default(uuid())
  board       Board        @relation(fields: [boardId], references: [id])
  boardId     String
  type        ElementType
  data        Json
  versions    ElementVersion[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model ElementVersion {
  id          String    @id @default(uuid())
  element     Element   @relation(fields: [elementId], references: [id])
  elementId   String
  data        Json
  version     Int
  createdAt   DateTime  @default(now())
}

model Permission {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  board     Board    @relation(fields: [boardId], references: [id])
  boardId   String
  role      Role
  createdAt DateTime @default(now())

  @@unique([userId, boardId])
}

model Operation {
  id        String    @id @default(uuid())
  board     Board     @relation(fields: [boardId], references: [id])
  boardId   String
  user      User?     @relation(fields: [userId], references: [id])
  userId    String?
  type      String
  payload   Json
  createdAt DateTime  @default(now())
}
